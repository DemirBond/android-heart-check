<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:minHeight="@dimen/checkbox_cell_height"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/section_bg_highlight">

        <include layout="@layout/level_mark" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:text=" â€¢"
            android:textSize="18sp"
            android:visibility="gone" />

        <com.szg_tech.heartcheck.core.views.CustomTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:paddingStart="@dimen/cell_padding_left"
            android:paddingTop="23dp"
            android:paddingEnd="@dimen/cell_padding_right"
            android:paddingBottom="8dp"
            app:type="body_placeholder" />

    </LinearLayout>

</android.support.v7.widget.CardView>
